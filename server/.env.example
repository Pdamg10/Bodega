# Bodega Server Configuration

# Server Port
PORT=3001

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_secret_key_change_in_production

# Automatic Backups
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Backup Retention (days and max count)
MAX_BACKUP_AGE_DAYS=90
MAX_BACKUP_COUNT=30

# Database (SQLite - no config needed)
# DB file will be created at: server/bodega.sqlite
